{
    "extends": "tslint:recommended",
    "rulesDirectory": [],
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-unused-expression": [
            true,
            "allow-fast-null-checks"
        ],
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "linebreak-style": [
            true,
            "CRLF"
        ],
        "typedef": [
            true,
            "parameter",
            "arrow-parameter",
            "property-declaration"
        ]
    },
    "linterOptions": {
        "exclude": [
            "src/**/*.test.{ts,tsx,js}",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    }
}